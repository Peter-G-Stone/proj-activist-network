<h1> <%= @group.name %> </h1>

<p> <%= @group.summary %> </p>


<p> Members: </p>

<ul>
    <% @group_users.each do |user| %>
        <li>  <%= user.name %> </li>
    <% end %>
</ul>

<br><br>

<% if @group_users.include?(current_user) %>
    <%= link_to "Leave Group", "/groups/#{@group.id}/leave_group" %>
<% else  %>
    <%= link_to "Join Group", "/groups/#{@group.id}/join_group" %>
<% end %>