<!DOCTYPE html>
<html>
  <head>
    <title>Activist Network</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"> 


  </head>

  <body>
    <div class='row'> <div class='col s12 m6'>
      <% if current_user %>
        <%= link_to "Groups", groups_path %> |
        <%= link_to "Recently Active Groups", recently_active_path %> |
        <%= link_to "My Page", profile_path(current_user) %> |
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>        
        
        <%= form_tag("/search_groups", method: "get", class: 'col s6') do %>
          <div class='row'>
            <div class='input-field col m12'>
              <%= label_tag(:group_name_q, "Search Groups") %>
              <%= text_field_tag(:group_name_q) %>
              <%= submit_tag("Search") %>
            </div>
          </div>
        <% end %> 
        
        <%= form_tag("/search_users", method: "get", class: 'col s6') do %>
          <div class='row'>
            <div class='input-field col m12'>
              <%= label_tag(:group_name_q, "Search Users by Username") %>
              <%= text_field_tag(:user_name_q) %>
              <%= submit_tag("Search") %>        
            </div>
          </div>
        <% end %>
        <br>
        
        Activist Network - Logged in as: <%= current_user.name %> <br> <br>
      <% else %>
        <h1>Activist Network</h1> <br> <br>
      <% end %>
      ---------------------------------------------------- <br> <br>
    </div></div>
    
    <%# these three lines are working with the devise gem:   %>
    <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
    <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
    <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
    <%#--------------------------------%>

    <%= yield %>
  </body>
</html>
